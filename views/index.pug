extends layout

block content
    h1= title
    div.row
        p.lead &nbsp;&nbsp; This is a minimal open source API build using Express framework of Node.js . &nbsp;
            a.btn-sm.btn-secondary.btn(target='_blank', href='https://vishnusayanth.github.io/')  Developer
            b &nbsp;
            a.btn-sm.btn-secondary.btn(target='_blank', href='https://vishnusayanth-react-app.netlify.app')  Front-end
            b &nbsp;
            a.btn-sm.btn-secondary.btn(target='_blank', href='https://github.com/vishnusayanth/express-app')  Source code
